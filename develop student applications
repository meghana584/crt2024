#include <stdio.h>

int main() {
    while(1)
    {
        printf("enter name\n");
        char name[20];
        scanf("%s",name);
        printf("enter father name\n");
        char fname[20];
        scanf("%s",fname);
        printf("enter branch\n");
        char branch[10];
        scanf("%s",branch);
        printf("enter martial status 1 for single and 2 for married\n");
        int a;
        scanf("%d",&a);
        if(a==1)
        continue;
        printf("enter spouse name\n");
        char sname[20];
        scanf("%s",sname);
        printf("enter no.of childrens\n");
        int b;
        scanf("%d",&b);
        printf("enter another record\n");
        char ch;
        fflush(stdin);
        if(ch=='n'||ch=='N')
        break;
    
    }

    return 0;
}
